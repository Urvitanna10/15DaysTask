<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".task9.EmailActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="16dp"
        android:id="@+id/edtxt_email"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtxt_sub"
        android:layout_alignRight="@+id/edtxt_email"
        android:layout_below="@id/edtxt_email"
        android:layout_marginTop="18dp"
        android:ems="10"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtxt_msg"
        android:layout_alignRight="@+id/edtxt_sub"
        android:layout_below="@id/edtxt_sub"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textMultiLine"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:layout_alignBaseline="@id/edtxt_email"
        android:layout_alignBottom="@id/edtxt_email"
        android:layout_alignParentLeft="true"
        android:text="To:"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:layout_alignBaseline="@id/edtxt_sub"
        android:layout_alignBottom="@id/edtxt_sub"
        android:layout_alignParentLeft="true"
        android:text="From:"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt3"
        android:layout_alignBaseline="@id/edtxt_msg"
        android:layout_alignBottom="@id/edtxt_msg"
        android:layout_alignParentLeft="true"
        android:text="Message:"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/sendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_alignEnd="@+id/edtxt_msg"
        android:layout_alignRight="@+id/edtxt_msg"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"/>


</RelativeLayout>